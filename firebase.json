{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/api/isUserAvailable",
        "function": "isUserAvailable"
      },
      {
        "source": "/api/signup",
        "function": "signup"
      },
      {
        "source": "/api/signin",
        "function": "signin"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
